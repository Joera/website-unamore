<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8" />
  <title>{{body.title}}</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <meta name="description" content="{{ trim_seo_desc body.content }}" />
  <link rel="icon" href="favicon.png">
  <link rel="stylesheet" href="{{assets_url}}/css/styles.css">
  <link rel="stylesheet" type="text/css" href="https://cloud.typography.com/7060374/6317832/css/fonts.css" />
</head>
<body>

{{> header}}

<aside>
       {{> nav }}
</aside>
 
 
<main>
       <section class="small-container">
              <article>
                     <h1>{{body.title}}</h1>
                     <div>{{{ markdown body.content}}}</div>
              </article>
       </section>   

       <section id="archief" class="small-container">
              {{ unique_years collections.posts  }}
              <ul>
              {{#each years as |year| }}
                     <li class="year_breaker">{{year}}</li>
                     {{ filter_by_year year ../collections.posts }}
                     {{#each ../filtered as |post|}}
                            <li><a href="./{{slugify post.title}}">{{post.title}}</a></li> 
                     {{/each}}
              {{/each}} 
              </ul>
       </section>   

       {{> tabs }}

</main>

       {{> footer}}
</body>
</html>

