<!DOCTYPE html>
<html lang="{{language}}">
{{> head }}
<body>

  {{> header}}

  <aside>
      {{> nav }}
  </aside>
 
 <main>

  <section class="small-container serie-container">
    <article class="series_introduction">
        
        <h1>{{body.title}}</h1>
        <div>
            {{{body.content}}}
        </div>
    </article>


    {{#each collections.paintings as |c| }} 
        
        <article class="painting">
            <img src="../../img/1200/{{c.image}}.jpg" />
            <div class="block_painting">
                <h3>{{{c.title}}}</h3>
                <div>{{{c.nl_description}}}</div>
                <span>{{{c.method}}}</span>
                <span>{{{c.size}}}</span>
            </div>
        </article>

    {{/each}}

  </section> 

   {{> tabs }}

</main>

    {{> footer }}
</body>
</html>